<%- include('./includes/headers.ejs'); %>

    <div class="show">

        <form action="/login" method="post" id="login">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <h2>Login</h2>

            <%- include('./includes/message.ejs'); %>

                <div class="login">
                    <% if(email) {%>
                        <div>
                            <label for="emailLog">Email:</label>
                            <input type="text" name="emailLog" id="emailLog" value="<%=email%>">
                        </div>
                        <%} else {%>
                            <div>
                                <label for="emailLog">Email:</label>
                                <input type="text" name="emailLog" id="emailLog">
                            </div>
                            <% } %>
                                <div>
                                    <label for="senhaLog">Senha:</label>
                                    <input type="password" name="senhaLog" id="senhaLog">
                                </div>
                                <div>
                                    <input type="submit" value="Login" id="go">
                                </div>
                </div>
        </form>
    </div>

    <footer>
        <%- include('./includes/footer.ejs'); %>
    </footer>

    <script src="/assets/js/bundle.js"></script>
    <script>
        window.onload = () => {
            localStorage.clear();
        }
    </script>